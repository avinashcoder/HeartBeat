<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F44336"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegistrationBloodgoupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="@string/wow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/circular_corner_button"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/what_is_your_blood_group"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/ll_a_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/a_positive" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_b_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/b_positive" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ab_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ab_positive" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_o_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/o_positive" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:weightSum="4"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/ll_a_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/a_negative" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_b_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/b_negative" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ab_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ab_negative" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_o_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/circular_red_border"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/o_negative" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:background="@drawable/circular_corner_button"
        android:paddingTop="6dp"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/you_are_currently_interested_for"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reg_blood_status_donar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/donar"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="@drawable/curved_rectangular_red_border"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/reg_blood_status_acceptor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/acceptor"
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="5dp"
                android:background="@drawable/curved_rectangular_red_border"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:text="@string/you_can_change_this_status_later_from_your_profile"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_reg_bloodgroup_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textColor="#F44336"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="60dp"
        android:textSize="18sp"
        android:background="@drawable/circular_corner_button"
        android:paddingRight="60dp"/>

</LinearLayout>